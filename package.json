{
  "name": "@ecl/ecl-webcomponents-library",
  "description": "ECL web components library",
  "license": "EUPL-1.2",
  "private": true,
  "main": "packages/ecl-webcomponents/dist/index.cjs.js",
  "module": "packages/ecl-webcomponents/dist/index.js",
  "es2015": "packages/ecl-webcomponents/dist/esm/index.mjs",
  "es2017": "packages/ecl-webcomponents/dist/esm/index.mjs",
  "types": "packages/ecl-webcomponents/dist/types/components.d.ts",
  "collection": "packages/ecl-webcomponents/dist/collection/collection-manifest.json",
  "collection:main": "packages/ecl-webcomponents/dist/collection/index.js",
  "engines": {
    "node": ">=18.0.0",
    "yarn": ">=1.1.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ec-europa/ecl-webcomponents"
  },
  "scripts": {
    "build": "run-s build:*",
    "build:clean": "rimraf build dist",
    "build:web-components": "lerna --scope \"@ecl/web-components-*\" run build",
    "build:stencil": "stencil build",
    "build:react": "lerna --scope \"@ecl/ecl-webcomponents-react\" run build",
    "build:react-consumer": "lerna --scope \"@ecl/ecl-webcomponents-react-consumer\" run build",
    "build:storybook": "NODE_ENV=production sb build -o build",
    "build:playground": "run-s build:playground:*",
    "build:playground:clean": "rimraf playground/ecl-webcomponents",
    "build:playground:copy": "ncp packages/ecl-webcomponents/dist/ecl-webcomponents playground/ecl-webcomponents && ncp ./playground ./build/playground",
    "build:playground:version": "scripts/add-build-number.js",
    "build:copy": "scripts/copy-assets.sh",
    "changelog": "lerna-changelog",
    "lint:js": "eslint . --ext .js",
    "lint:scss": "stylelint \"./src/**/*.scss\"",
    "lint": "npm-run-all --parallel lint:* -cln",
    "patch": "patch-package",
    "prepare": "npx husky install",
    "pretty-check": "prettier --check \"src/**/*.{md,mdx,html,json,yml,js,jsx,scss}\"",
    "pretty-write": "prettier --write \"src/**/*.{md,mdx,html,json,yml,js,jsx,scss}\"",
    "publish": "scripts/publish.sh",
    "start": "stencil build --watch",
    "test": "yarn pretty-check && stencil test --spec",
    "test:update": "rimraf src/components/*/test/__snapshots__ && yarn test",
    "test:dev": "stencil test --spec --watchAll",
    "generate": "run-s \"generate:* {@}\" --",
    "generate:stencil": "stencil generate",
    "generate:docs": "stencil build --docs",
    "generate:template": "scripts/template.sh",
    "plugins:dev": "lerna --scope \"@ecl/ckeditor5-*\" run dev",
    "plugins:make": "lerna --scope \"@ecl/ckeditor5-*\" run build",
    "postinstall": "patch-package && [ -z \"$NOYARNPOSTINSTALL\" ] && (lerna run postinstall && lerna run prepublish) || echo \"Bypass prepublish\"",
    "refresh-playground": "lerna --scope \"@ecl/ckeditor5-*\" run dev:install-plugin && lerna --scope \"@ecl/ckeditor5-*\" run build && yarn build:playground",
    "dev": "sb dev -p 6006",
    "dev-react": "lerna --scope \"@ecl/ecl-webcomponents-react*\" run dev",
    "update-version": "scripts/update-version.sh"
  },
  "workspaces": [
    "src/components/**",
    "playground",
    "src/plugins/**",
    "packages/**"
  ],
  "dependencies": {
    "@stencil/core": "3.2.1"
  },
  "devDependencies": {
    "@babel/core": "7.21.4",
    "@babel/eslint-parser": "7.21.3",
    "@babel/plugin-transform-runtime": "7.21.4",
    "@babel/preset-react": "7.18.6",
    "@babel/preset-typescript": "7.21.4",
    "@prettier/plugin-xml": "2.2.0",
    "@storybook/addon-essentials": "7.0.5",
    "@storybook/addon-links": "7.0.5",
    "@storybook/builder-webpack5": "7.0.5",
    "@storybook/cli": "7.0.5",
    "@storybook/html": "7.0.5",
    "@storybook/html-webpack5": "7.0.5",
    "@types/jest": "27.0.3",
    "babel-loader": "9.1.2",
    "build-number-generator": "2.0.4",
    "copyfiles": "2.4.1",
    "core-js": "3.30.1",
    "cross-env": "7.0.3",
    "eslint": "8.38.0",
    "eslint-config-airbnb": "19.0.4",
    "eslint-config-airbnb-base": "15.0.0",
    "eslint-config-prettier": "8.8.0",
    "eslint-plugin-import": "2.27.5",
    "eslint-plugin-jest": "27.2.1",
    "eslint-plugin-jsx-a11y": "6.7.1",
    "eslint-plugin-prettier": "4.2.1",
    "eslint-plugin-react": "7.32.2",
    "eslint-plugin-react-hooks": "4.6.0",
    "get-latest-version": "5.0.1",
    "husky": "8.0.3",
    "jest": "27.0.3",
    "jest-cli": "27.4.5",
    "lerna": "6.6.1",
    "lerna-changelog": "2.2.0",
    "lint-staged": "13.2.1",
    "ncp": "2.0.0",
    "npm-run-all": "4.1.5",
    "patch-package": "6.5.1",
    "prettier": "2.8.7",
    "puppeteer": "19.5.2",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "replace-in-file": "6.3.5",
    "rimraf": "5.0.0",
    "stylelint": "15.5.0",
    "stylelint-config-css-modules": "4.2.0",
    "stylelint-config-prettier": "9.0.5",
    "stylelint-config-standard": "33.0.0",
    "stylelint-config-standard-scss": "8.0.0",
    "stylelint-order": "6.0.3",
    "stylelint-scss": "4.6.0"
  },
  "nohoist": [
    "**/ckeditor5*",
    "**/ckeditor5*/**"
  ],
  "lint-staged": {
    "*.{md,mdx,html,json,yml,svg}": [
      "prettier --write"
    ],
    "*.js": [
      "prettier --write",
      "eslint"
    ],
    "*.scss": [
      "prettier --write",
      "stylelint"
    ]
  },
  "resolutions": {
    "glob-parent": ">=5.1.2",
    "trim": ">=0.0.3",
    "json5": ">=1.0.2",
    "http-cache-semantics": ">=4.1.1"
  }
}
