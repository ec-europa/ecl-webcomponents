{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "lib": ["dom", "es2015", "dom.iterable"],
    "module": "es2015",
    "moduleResolution": "node",
    "target": "es2015",
    "declaration": true,
    "skipLibCheck": true,
    "jsx": "react-jsx",
    "jsxFactory": "",
    "allowSyntheticDefaultImports": true,
    "declarationDir": "./dist/types",
    "paths": {
      "@ecl/ecl-webcomponents-library/*": ["../../ecl-webcomponents/dist/*"],
      "@ecl/ecl-webcomponents": ["../../ecl-webcomponents/dist/index.js"],
      "@ecl/ecl-webcomponents/*": ["../../ecl-webcomponents/dist/*"]
    }
  },
  "include": ["lib"],
  "exclude": ["node_modules", "dist"]
}
