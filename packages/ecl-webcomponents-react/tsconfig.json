{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "lib": ["dom", "es2015", "dom.iterable"],
    "module": "es2015",
    "moduleResolution": "node",
    "target": "es2015",
    "declaration": true,
    "skipLibCheck": true,
    "jsx": "react-jsx",
    "jsxFactory": "",
    "allowSyntheticDefaultImports": true,
    "declarationDir": "./dist/types"
