{
  "name": "@ecl/ecl-webcomponents-angular-workspace",
  "version": "0.8.0",
  "scripts": {
    "clean": "rimraf dist",
    "ng": "ng",
    "build": "npm run clean && cd projects/ecl-webcomponents-angular && ng build && npm run copy && cd ../ecl-webcomponents-angular-consumer && ng build",
    "watch": "cd projects/ecl-webcomponents-angular-consumer && ng build --watch --configuration development",
    "test": "ng test",
    "reload": "browser-sync start --proxy 'localhost:3000' --files 'dist/**/*'",
    "serve": "nodemon server.js --watch dist",
    "pre-publish": "npm run build"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "16.1.6",
    "@angular/common": "16.1.6",
    "@angular/compiler": "16.1.6",
    "@angular/core": "16.1.6",
    "@angular/forms": "16.1.6",
    "@angular/platform-browser": "16.1.6",
    "@angular/platform-browser-dynamic": "16.1.6",
    "@angular/router": "16.1.6",
    "rxjs": "~7.8.0",
    "tslib": "2.6.1",
    "zone.js": "0.13.1"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "16.1.5",
    "@angular/cli": "16.1.5",
    "@angular/compiler-cli": "16.1.6",
    "@ecl/ecl-webcomponents": "0.8.0",
    "@ecl/ecl-webcomponents-angular": "0.8.0",
    "@babel/plugin-proposal-private-property-in-object": "7.21.11",
    "browser-sync": "2.29.3",
    "express": "4.18.2",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "3.2.0",
    "karma-coverage": "~2.2.1",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "2.1.0",
    "ncp": "2.0.0",
    "ng-packagr": "16.1.0",
    "nodemon": "3.0.1",
    "rimraf": "5.0.1",
    "typescript": "~4.9.4"
  }
}
